    <script>
        class SimpleImageViewer {
            constructor() {
                this.images = [];
                this.initElements();
                this.bindEvents();
            }
            
            initElements() {
                this.urlTextarea = document.getElementById('urlTextarea');
                this.loadBtn = document.getElementById('loadBtn');
                this.clearBtn = document.getElementById('clearBtn');
                this.exampleBtn = document.getElementById('exampleBtn');
                this.imageGrid = document.getElementById('imageGrid');
                this.status = document.getElementById('status');
            }
            
            bindEvents() {
                this.loadBtn.addEventListener('click', () => this.loadImages());
                this.clearBtn.addEventListener('click', () => this.clearAllImages());
                this.exampleBtn.addEventListener('click', () => this.loadExampleImages());
                
                // ë¶™ì—¬ë„£ê¸° ì´ë²¤íŠ¸ ì²˜ë¦¬ ì¶”ê°€
                this.urlTextarea.addEventListener('paste', (e) => this.handlePaste(e));
            }
            
            showStatus(message, type = 'info') {
                this.status.textContent = message;
                this.status.className = `status ${type}`;
                setTimeout(() => {
                    this.status.textContent = '';
                    this.status.className = 'status';
                }, 3000);
            }
            
            validateUrl(url) {
                try {
                    new URL(url.trim());
                    return true;
                } catch {
                    return false;
                }
            }
            
            async loadImages() {
                const urls = this.urlTextarea.value
                    .split('\n')
                    .map(url => url.trim())
                    .filter(url => url.length > 0);
                
                if (urls.length === 0) {
                    this.showStatus('ì´ë¯¸ì§€ URLì„ ì…ë ¥í•´ì£¼ì„¸ìš”.', 'error');
                    return;
                }
                
                const validUrls = urls.filter(url => this.validateUrl(url));
                const invalidUrls = urls.filter(url => !this.validateUrl(url));
                
                if (invalidUrls.length > 0) {
                    this.showStatus(`${invalidUrls.length}ê°œì˜ ì˜ëª»ëœ URLì´ ì œì™¸ë˜ì—ˆìŠµë‹ˆë‹¤.`, 'error');
                }
                
                if (validUrls.length === 0) {
                    this.showStatus('ìœ íš¨í•œ ì´ë¯¸ì§€ URLì´ ì—†ìŠµë‹ˆë‹¤.', 'error');
                    return;
                }
                
                this.loadBtn.disabled = true;
                this.loadBtn.textContent = 'ë¡œë”© ì¤‘...';
                
                let successCount = 0;
                let failCount = 0;
                
                for (const url of validUrls) {
                    try {
                        await this.addImage(url);
                        successCount++;
                    } catch (error) {
                        failCount++;
                    }
                }
                
                this.loadBtn.disabled = false;
                this.loadBtn.textContent = 'ì´ë¯¸ì§€ ë¡œë“œ';
                
                if (successCount > 0) {
                    this.showStatus(`${successCount}ê°œì˜ ì´ë¯¸ì§€ê°€ ì„±ê³µì ìœ¼ë¡œ ë¡œë“œë˜ì—ˆìŠµë‹ˆë‹¤.${failCount > 0 ? ` (${failCount}ê°œ ì‹¤íŒ¨)` : ''}`, 'success');
                } else {
                    this.showStatus('ì´ë¯¸ì§€ ë¡œë“œì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.', 'error');
                }
            }
            
            async addImage(url) {
                return new Promise((resolve, reject) => {
                    const imageItem = document.createElement('div');
                    imageItem.className = 'image-item';
                    
                    imageItem.innerHTML = `
                        <img src="${url}" alt="ì´ë¯¸ì§€" />
                        <div class="image-url">${url}</div>
                    `;
                    
                    const img = imageItem.querySelector('img');
                    
                    img.onload = () => {
                        this.imageGrid.appendChild(imageItem);
                        this.images.push({ url, element: imageItem });
                        resolve();
                    };
                    
                    img.onerror = () => {
                        reject(new Error(`ì´ë¯¸ì§€ ë¡œë“œ ì‹¤íŒ¨: ${url}`));
                    };
                });
            }
            
            clearAllImages() {
                if (this.images.length === 0) {
                    this.showStatus('ì‚­ì œí•  ì´ë¯¸ì§€ê°€ ì—†ìŠµë‹ˆë‹¤.', 'error');
                    return;
                }
                
                if (confirm('ëª¨ë“  ì´ë¯¸ì§€ë¥¼ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                    this.imageGrid.innerHTML = '';
                    this.images = [];
                    this.showStatus('ëª¨ë“  ì´ë¯¸ì§€ê°€ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
                }
            }
            
            loadExampleImages() {
                const exampleUrls = [
                    'https://ai.esmplus.com/worldbl/250624/c/1.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/3.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/4.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/5.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/6.gif',
                    'https://ai.esmplus.com/worldbl/250624/c/7.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/8.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/10.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/12.jpg',
                    'https://ai.esmplus.com/worldbl/250624/c/15.jpg'
                ];
                
                this.urlTextarea.value = exampleUrls.join('\n');
                this.showStatus('ì˜ˆì‹œ ì´ë¯¸ì§€ URLì´ ë¡œë“œë˜ì—ˆìŠµë‹ˆë‹¤. "ì´ë¯¸ì§€ ë¡œë“œ" ë²„íŠ¼ì„ í´ë¦­í•˜ì„¸ìš”.', 'info');
            }
            
            handlePaste(e) {
                e.preventDefault();
                
                // í´ë¦½ë³´ë“œ ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
                const clipboardData = e.clipboardData || window.clipboardData;
                const pastedData = clipboardData.getData('text/html') || clipboardData.getData('text');
                
                // ì„ì‹œ div ìƒì„±í•˜ì—¬ HTML íŒŒì‹±
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = pastedData;
                
                // ì´ë¯¸ì§€ íƒœê·¸ ì°¾ê¸°
                const images = tempDiv.getElementsByTagName('img');
                const existingText = this.urlTextarea.value;
                
                // ì´ë¯¸ì§€ URL ì¶”ì¶œ
                let newUrls = [];
                for (const img of images) {
                    const url = img.src;
                    if (url) {
                        newUrls.push(url);
                    }
                }
                
                // URLì´ ë°œê²¬ëœ ê²½ìš°ì—ë§Œ ì²˜ë¦¬
                if (newUrls.length > 0) {
                    // ê¸°ì¡´ ë‚´ìš©ì´ ìˆìœ¼ë©´ ì¤„ë°”ê¿ˆ ì¶”ê°€
                    const separator = existingText.length > 0 ? '\n' : '';
                    this.urlTextarea.value = existingText + separator + newUrls.join('\n');
                    this.showStatus(`${newUrls.length}ê°œì˜ ì´ë¯¸ì§€ URLì´ ì¶”ì¶œë˜ì—ˆìŠµë‹ˆë‹¤.`, 'success');
                } else {
                    // ì´ë¯¸ì§€ URLì´ ì—†ìœ¼ë©´ ì›ë³¸ í…ìŠ¤íŠ¸ ë¶™ì—¬ë„£ê¸°
                    const originalText = clipboardData.getData('text');
                    const separator = existingText.length > 0 ? '\n' : '';
                    this.urlTextarea.value = existingText + separator + originalText;
                }
            }
        }
        
        // ì´ë¯¸ì§€ ë·°ì–´ ì´ˆê¸°í™”
        const imageViewer = new SimpleImageViewer();
    </script>
